<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="issueManager" class="com.solidstategroup.radar.service.impl.IssueManagerImpl">
        <property name="issueDao" ref="issueDao"/>
    </bean>

    <bean id="clinicalDataManager" class="com.solidstategroup.radar.service.impl.ClinicalDataManagerImpl">
        <property name="clinicalDataDao" ref="clinicalDataDao"/>
    </bean>

    <bean id="demographicsManager" class="com.solidstategroup.radar.service.impl.DemographicsManagerImpl">
        <property name="demographicsDao" ref="demographicsDao"/>
    </bean>

    <bean id="diagnosisManager" class="com.solidstategroup.radar.service.impl.DiagnosisManagerImpl">
        <property name="diagnosisDao" ref="diagnosisDao"/>
    </bean>

    <bean id="hospitalisationManager" class="com.solidstategroup.radar.service.impl.HospitalisationManagerImpl">
        <property name="hospitalisationDao" ref="hospitalisationDao"/>
    </bean>

    <bean id="immunosuppressionManager" class="com.solidstategroup.radar.service.impl.ImmunosuppressionManagerImpl">
        <property name="immunosuppressionDao" ref="immunosuppressionDao"/>
        <property name="demographicsManager" ref="demographicsManager"/>
    </bean>

    <bean id="labDataManager" class="com.solidstategroup.radar.service.impl.LabDataManagerImpl">
        <property name="labDataDao" ref="labDataDao"/>
    </bean>

    <bean id="pathologyManager" class="com.solidstategroup.radar.service.impl.PathologyManagerImpl">
        <property name="pathologyDao" ref="pathologyDao"/>
    </bean>

    <bean id="plasmapheresisManager" class="com.solidstategroup.radar.service.impl.PlasmapheresisManagerImpl">
        <property name="plasmapheresisDao" ref="plasmapheresisDao"/>
        <property name="demographicsManager" ref="demographicsManager"/>
    </bean>

    <bean id="relapseManager" class="com.solidstategroup.radar.service.impl.RelapseManagerImpl">
        <property name="relapseDao" ref="relapseDao"/>
    </bean>

    <bean id="therapyManager" class="com.solidstategroup.radar.service.impl.TherapyManagerImpl">
        <property name="therapyDao" ref="therapyDao"/>
    </bean>

    <bean id="transplantManager" class="com.solidstategroup.radar.service.impl.TransplantManagerImpl">
        <property name="transplantDao" ref="transplantDao"/>
        <property name="demographicsManager" ref="demographicsManager"/>
    </bean>

    <bean id="treatmentManager" class="com.solidstategroup.radar.service.impl.TreatmentManagerImpl">
        <property name="treatmentDao" ref="treatmentDao"/>
        <property name="demographicsManager" ref="demographicsManager"/>
    </bean>

    <bean id="utilityManager" class="com.solidstategroup.radar.service.impl.UtilityManagerImpl">
        <property name="utilityDao" ref="utilityDao"/>
    </bean>

    <bean id="emailManager" class="com.solidstategroup.radar.service.impl.EmailManagerImpl">
        <property name="javaMailSender" ref="javaMailSender"/>
        <property name="emailAddressAdmin1" value="${email.admin1}"/>
        <property name="emailAddressAdmin2" value="${email.admin2}"/>
        <property name="emailAddressApplication" value="${email.application}"/>
        <property name="debug" value="${debug}"/>
    </bean>

    <bean id="userManager" class="com.solidstategroup.radar.service.impl.UserManagerImpl">
        <property name="emailManager" ref="emailManager"/>
        <property name="demographicsDao" ref="demographicsDao"/>
        <property name="userDao" ref="userDao"/>
        <property name="authenticationManager" ref="authenticationManager"/>
    </bean>

    <bean id="exportManager" class="com.solidstategroup.radar.service.impl.ExportManagerImpl">
        <property name="userManager" ref="userManager"/>
        <property name="utilityManager" ref="utilityManager"/>
        <property name="demographicsManager" ref="demographicsManager"/>
        <property name="diagnosisManager" ref="diagnosisManager"/>

        <property name="csvDocumentDataBuilder" ref="csvDocumentDataBuilder"/>
        <property name="excelDocumentDataBuilder" ref="excelDocumentDataBuilder"/>
        <property name="pdfDocumentDataBuilder" ref="pdfDocumentDataBuilder"/>
    </bean>

    <bean id="csvDocumentDataBuilder" class="com.solidstategroup.radar.service.impl.CsvDocumentDataBuilder"/>
    <bean id="excelDocumentDataBuilder" class="com.solidstategroup.radar.service.impl.ExcelDocumentDataBuilder"/>
    <bean id="pdfDocumentDataBuilder" class="com.solidstategroup.radar.service.impl.PdfDocumentDataBuilder"/>

</beans>